<div class="p-3 d-flex flex-column">
  <!-- user name -->
  <div class="d-flex">
  
    <%= render "shared/author_avatar", user: user%>

    <span class="text-nowrap my-auto pl-2 text-primary font-weight-bolder"><%= user.first_name + " " + user.last_name%> </span>
  </div>

  <div class="flex-column flex-grow-1">

    <div class="font-weight-bolder my-3">
      <%= photo.title%>
    </div>

    <p class="overflow-hidden" style="height: 170px">
      <%= photo.description%>
    </p>
  </div>

  <div class="d-flex justify-content-between text-nowrap">
    <!-- tym -->
    <div class="d-flex text-primary  align-items-center ">
      <i class="fa-solid fa-heart"></i>
      <span>123</span>
    </div>
    <span class="text-secondary">4:56 - 02/09/1999</span>
  </div>
</div>