<%=render "devise/shared/nav_bar"%>

<h1 class="w-100 text-center text-primary font-weight-bolder mt-5 pt-5 mb-5">
  Fotobook Signup
</h1>

<div class="shadow rounded bg-light p-5 col col-xl-4 col-lg-5 col-sm-7 m-auto">

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class=" form-group">
      <%= f.label :first_name, class: "font-weight-bold" %><br />
      <%= f.text_field :first_name, autofocus: true, class: "form-control p-2", placeholder: "Last Name"  %>
    </div>

    <div class=" form-group">
      <%= f.label :last_name, class: "font-weight-bold" %><br />
      <%= f.text_field :last_name, class: "form-control p-2", placeholder: "First Name" %>
    </div>

    <div class="field form-group">
      <%= f.label :email, class: "font-weight-bold" %><br />
      <%= f.email_field :email,  autocomplete: "email", class: "form-control p-2", placeholder: "Email" %>
    </div>

    <div class="field form-group">
      <%= f.label :password, class: "font-weight-bold" %><br />
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password,  autocomplete: "new-password", class: "form-control p-2", placeholder: "Password" %>

    </div>

    <div class="field form-group">
      <%= f.label :password_confirmation, class: "font-weight-bold" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control p-2", placeholder: "Confirm Password" %>
    </div>

    <div class="actions d-flex align-items-center container">
      <%= f.submit "Sign up", class: "btn btn-primary font-weight-bold px-3 py-s2 m-auto" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>

<script>
  $(document).ready(function (){
    $("#new_user").validate({
      rules: {
        'user[first_name]': {
          required: true,
          maxlength: 25
        },
        'user[last_name]': {
          required: true,
          maxlength: 25
        },
        'user[email]': {
          required: true,
          maxlength: 255
        },
        'user[password]': {
          required: true,
          maxlength: 64
        },
        'user[password_confirmation]': {
          required: true,
            equalTo: "#user_password"
        }
      }
    })
  })
</script>