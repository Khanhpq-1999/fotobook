<div id="carousel_controls_album_<%= album.id %>" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <%album.photos.each_with_index do |photo, index|%>
      <%= render "album_carousel_item", photo: photo, index: index %>
    <% end %>
  </div>
  <a class="carousel-control-prev" href="#carousel_controls_album_<%= album.id %>" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carousel_controls_album_<%= album.id %>" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>


