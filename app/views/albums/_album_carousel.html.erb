<div id="carousel_controls_album_<%=album.id%>" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src= <%= album.photos.first.url %> class="d-block" style="height: 500px;width: 100%; object-fit: cover;" alt="photo">
    </div>
    <%album.photos.offset(1).each do |photo|%>
      <%= render "album_carousel_item", photo: photo%>
    <% end %>
  </div>
  <a class="carousel-control-prev" href="#carousel_controls_album_<%=album.id%>" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carousel_controls_album_<%=album.id%>" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>


